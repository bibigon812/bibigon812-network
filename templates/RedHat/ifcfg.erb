#
# Managed by Puppet in the <%= @env %> environment
#
BOOTPROTO=none
<% unless @interface_name.nil? -%>
DEVICE=<%= @interface_name %>
<% end -%>
<% unless @ipaddr.nil? -%>
IPADDR=<%= @ipaddr %>
<% end -%>
<% unless @prefix.nil? -%>
PREFIX=<%= @prefix %>
<% end -%>
<% unless @mac.nil? -%>
MACADDR=<%= @mac %>
<% end -%>
<% unless @master.nil? -%>
SLAVE=yes
MASTER=<%= @master %>
<% end -%>
ONBOOT=yes
USERCTL=no
NM_CONTROLLED=no
<% if @type == 'bond' -%>
BONDING_OPTS="<% unless @bond_mode.nil? %>mode=<%= @bond_mode %><% end %><% unless @bond_miimon.nil? %> miimon=<%= @bond_miimon %><% end %><% unless @bond_lacp_rate.nil? %> lacp_rate=<%= @bond_lacp_rate %><% end %><% unless @bond_xmit_hash_policy.nil? %> xmit_hash_policy=<%= @bond_xmit_hash_policy %><% end %>"
TYPE=Bond
<% elsif @type == 'vlan' -%>
VLAN=yes
TYPE=Ethernet
<% unless @parent.nil? -%>
PHYSDEV=<%= @parent %>
<% end -%>
<% elsif @type == 'hw' -%>
TYPE=Ethernet
<% end -%>