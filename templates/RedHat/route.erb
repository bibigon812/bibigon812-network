#
# Managed by Puppet in the <%= @environment %> environment
#
<% @routes.each do |route|  -%>
<% unless route['ensure'] == 'absent' -%>
<%= route['prefix'] -%>
<% unless route['nexthop'].nil? -%>
 via <%= route['nexthop'] -%>
<% end -%>
 dev <%= route['device'] -%>
<% unless route['metric'].nil? -%>
 metric <%= route['metric'] -%>
<% end %>
<% end -%>
<% end -%>